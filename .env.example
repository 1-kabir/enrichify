# Enrichify Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env - keep sensitive data private

# Application
NODE_ENV=development
PORT=3001

# Frontend (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:3001
FRONTEND_PORT=8080

# Database
DATABASE_URL=postgresql://enrichify:password@postgres:5432/enrichify
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=enrichify
DATABASE_PASSWORD=password
DATABASE_NAME=enrichify

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# LLM Providers (Add your API keys here)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
GROQ_API_KEY=
OPENROUTER_API_KEY=
MISTRAL_API_KEY=

# Search Providers (Add your API keys here)
EXA_API_KEY=
BRAVE_API_KEY=
TAVILY_API_KEY=
SERPER_API_KEY=

# Optional: Use config.yml instead of environment variables
# Set to true to load configuration from config.yml
# CONFIG_FROM_FILE=false

# Admin User (created on first startup if user doesn't exist)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@enrichify.local
ADMIN_PASSWORD=changeme123
